{
  "manifest_version": 3,
  "name": "Truth",
  "version": "0.1.0",
  "description": "Verify page content with real-money prediction markets.",
  "permissions": ["activeTab"],
  "host_permissions": ["https://gamma-api.polymarket.com/*"],
  "action": {
    "default_title": "Truth",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "inject/widget.js"],
      "css": ["inject/widget.css"]
    }
  ]
}
